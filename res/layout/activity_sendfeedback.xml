<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chat"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_register"
        layout="@layout/include_action_bar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_chat_top"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_left_qp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center"
        android:lineSpacingExtra="2dp"
        android:maxWidth="225.0dip"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="说说你的困惑吧宝贝儿~"
        android:textColor="#ff000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="@color/color_half_transparent"
        android:gravity="top"
        android:hint="@string/send_feedback_hint"
        android:textColor="@color/base_color_text_white"
        android:textColorHint="@color/base_color_text_gray" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="0.06"
        android:background="@drawable/card_bk"
        android:gravity="center"
        android:text="@string/send_feedback"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>