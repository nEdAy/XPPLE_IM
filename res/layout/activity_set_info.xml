<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_half_transparent" >

    <include
        android:id="@+id/layout_register"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:id="@+id/layout_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_info"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/btn_clear" />

        <TextView
            android:id="@+id/black_tips"
            style="@style/Smile.TextView._Black"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/black_tips"
            android:textColor="@color/base_color_text_white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_set_gender"
            style="@style/Smile.TextView._Black"
            android:layout_alignBottom="@+id/iv_set_avatar"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@+id/btn_clear"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color_text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp" >

            <Button
                android:id="@+id/btn_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bk"
                android:gravity="center"
                android:text="@string/add_friend"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bk"
                android:gravity="center"
                android:text="@string/blacklist"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bk"
                android:gravity="center"
                android:text="@string/chat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_bk"
                android:gravity="center"
                android:text="@string/logout"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_set_name"
            style="@style/Smile.TextView._Black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color_text_white" />

        <TextView
            android:id="@+id/tv_set_nick"
            style="@style/Smile.TextView._Black"
            android:layout_below="@+id/tv_set_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color_text_white" />

        <com.xpple.im.view.RoundImageView
            android:id="@+id/iv_set_avatar"
            style="@style/Smile.ImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head" />

    </RelativeLayout>

</RelativeLayout>