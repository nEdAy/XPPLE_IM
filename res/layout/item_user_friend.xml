<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColor="@color/base_color_text_gray"
        android:textSize="18sp" />

    <com.xpple.im.view.RoundImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/base_color_text_white"
        android:textSize="20sp" />

</RelativeLayout>